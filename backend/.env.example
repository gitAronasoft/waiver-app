# ==========================================
# SKATE & PLAY WAIVER SYSTEM - ENV CONFIG
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# DATABASE CONFIGURATION (MySQL/MariaDB)
# ==========================================
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=waiver_db
DB_PORT=3306

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate a strong random secret for JWT tokens
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_strong_random_jwt_secret_key_here

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=8080
NODE_ENV=production

# ==========================================
# FRONTEND URL (for CORS and rating links)
# ==========================================
# Production: Your actual domain
FRONTEND_URL=https://yourdomain.com
# For rating links in emails/SMS
REACT_LINK_BASE=https://yourdomain.com

# ==========================================
# TWILIO SMS/OTP CONFIGURATION
# ==========================================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_SERVICE_SID=your_twilio_messaging_service_sid

# ==========================================
# EMAIL CONFIGURATION (SMTP)
# ==========================================
# For Gmail: smtp.gmail.com, port 465
# For SendGrid: smtp.sendgrid.net, port 587
# For AWS SES: email-smtp.us-east-1.amazonaws.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# ==========================================
# MAILCHIMP CONFIGURATION
# ==========================================
# Get these from: https://admin.mailchimp.com/account/api/
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_audience_list_id
MAILCHIMP_DC=us1
# Note: DC is the data center from your API key (e.g., if key ends in -us1, use us1)

# ==========================================
# OPTIONAL: FILE UPLOAD LIMITS
# ==========================================
# MAX_FILE_SIZE=10485760  # 10MB in bytes
